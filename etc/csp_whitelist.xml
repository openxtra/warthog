<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="google-analytics" type="host">*.google-analytics.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
                <value id="livechat_api" type="host">api.livechatinc.com</value>
                <value id="livechat_cdn" type="host">cdn.livechatinc.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="securitymetrics" type="host">*.securitymetrics.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="google-analytics" type="host">*.google-analytics.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="livechat_secure" type="host">secure.livechatinc.com</value>
            </values>
        </policy>
        <policy id="media-src">
            <values>
                <value id="livechat_cdn" type="host">cdn.livechatinc.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
